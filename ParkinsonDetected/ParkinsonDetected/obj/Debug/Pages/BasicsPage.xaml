<Page
    x:Class="ParkinsonDetected.Pages.BasicsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ParkinsonDetected.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Height="630">

            <Grid Height="1">


                <ComboBox 
                        ItemsSource="{Binding Devices, Mode=TwoWay}"
                        SelectedItem="{Binding SelectedDevice, Mode=TwoWay}" Margin="51,523,149,-523">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

            <Grid>
                <Button x:ConnectionId='2' x:Name="btnConnect" Template="{StaticResource RoundButtonStyle}"
            	IsEnabled="{Binding Self, Converter={StaticResource ConnectCommandEnabledConverter}}"
            	Content="{Binding Main.BandClient, Converter={StaticResource ConnectCommandTextConverter}, FallbackValue=Connect}"
            	                                  Width="157" Height="156"
            	HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" />
                <Button x:ConnectionId='3' x:Name="btn_Record" Content="Record" HorizontalAlignment="Right" Margin="0,17,0,-4" VerticalAlignment="Top" Width="162" Template="{StaticResource RoundButtonStyle}"                             Height="160"/>
                <!--ContentPanel - place additional content here-->
            </Grid>
            <Button x:ConnectionId='1' x:Name="btn_Result" Content="Check Result" HorizontalAlignment="Center" Margin="0,17,0,-4" VerticalAlignment="Top" Width="162" Template="{StaticResource RoundButtonStyle}"                              Height="160"/>
            <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0"/>
            <TextBlock x:Name="txt_result" TextWrapping="Wrap" Text=""  HorizontalAlignment="Center" />
        </StackPanel>
    </ScrollViewer>
</Page>

